.flex {
  display: flex;
  flex-wrap: wrap;

  .row {
    flex: 1 1 100%;

    @media screen and (min-width: 30em) {
      flex: 1 1 50%;
      &:nth-of-type(2) p {padding-left: 0; padding-right: 20px;}
      &:last-of-type p {padding-right: 0; padding-left: 20px}
    }

    &:first-of-type {
      flex: 1 1 100%;
      max-height: 400px;
      overflow: hidden;
    }
  }
}

.content {
  padding: 20px;

  h1 {
    font-size: 2em;
    color: $grey;
    margin-bottom: 20px;
  }

  p {
    padding: 10px 0;
    font-size: 1em;
    line-height: 1.5;
    color: $grey;
  }

  img {
    width: 100%;
    height: auto;
  }

}

form {
  padding: 20px 0;
  max-width: 360px;

  label {
    display: block;
    font-size: 1.2em;
    color: $grey;
  }

  input {
    display: block;
    margin: 6px 0 24px;
    padding: 4px 6px;
    width: 100%;
    height: 24px;
    font-size: 1.2em;

    &:focus {
      outline: 1px solid black;
    }
  }
}
